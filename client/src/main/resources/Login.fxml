<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="globParent" alignment="center" spacing="5.0" style="-fx-background-image: url(images/wall.png);" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.LoginController">
    <TextField fx:id="login" focusTraversable="false" maxWidth="200" prefHeight="25.0" promptText="insert your login" />
    <PasswordField fx:id="password" focusTraversable="false" maxWidth="200" prefHeight="25.0" promptText="insert your password" />
<!--    <TextField fx:id="login" focusTraversable="false" maxWidth="200" prefHeight="25.0" promptText="insert your login" text="login1"/>-->
<!--    <PasswordField fx:id="password" focusTraversable="false" maxWidth="200" prefHeight="25.0" promptText="insert your password" text="pass1"/>-->

    <VBox fx:id="authorizationVBox" alignment="center" spacing="5.0">
        <Button alignment="CENTER" defaultButton="true" onAction="#onAuthorizationBtnClick" prefHeight="25.0" prefWidth="90.0" text="Authorization" textAlignment="CENTER" />
        <Hyperlink alignment="CENTER" contentDisplay="CENTER" onAction="#onRegistrationLinkClick" prefHeight="25.0" prefWidth="80.0" text="Registration" textAlignment="CENTER" underline="true" visited="true" />
    </VBox>
    <VBox fx:id="registrationVBox" alignment="center" managed="false" spacing="5.0" visible="false">
        <PasswordField fx:id="passwordConfirm" focusTraversable="false" maxWidth="200" prefHeight="25.0" promptText="insert your password" />
<!--        <PasswordField fx:id="passwordConfirm" focusTraversable="false" maxWidth="200" prefHeight="25.0" promptText="insert your password" text="pass1"/>-->
        <HBox alignment="CENTER">
            <Button alignment="CENTER" defaultButton="true" onAction="#onRegistrationBtnClick" prefHeight="25.0" prefWidth="90.0" text="Registration" textAlignment="CENTER" />
            <Hyperlink alignment="CENTER" contentDisplay="CENTER" onAction="#onAuthorizationLinkClick" prefHeight="25.0" prefWidth="80.0" text="Authorization" textAlignment="CENTER" underline="true" visited="true" />
        </HBox>
    </VBox>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>
