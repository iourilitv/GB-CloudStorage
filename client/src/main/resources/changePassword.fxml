<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="globParent" alignment="center" spacing="5.0" style="-fx-background-image: url(images/wall.png);" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.ChangePasswordController">
    <TextField fx:id="login" focusTraversable="false" maxWidth="200" prefHeight="25.0" promptText="insert your login" />
    <PasswordField fx:id="password" focusTraversable="false" maxWidth="200" prefHeight="25.0" promptText="insert your current password" />

    <PasswordField fx:id="newPassword" focusTraversable="false" maxWidth="200" prefHeight="25.0" promptText="insert your new password" />
    <PasswordField fx:id="newPasswordConfirm" focusTraversable="false" maxWidth="200" prefHeight="25.0" promptText="confirm your new password" />
    <HBox alignment="CENTER" spacing="5.0">
        <Button alignment="CENTER" onAction="#onConfirmBtnClick" prefHeight="25.0" prefWidth="70.0" text="Confirm" textAlignment="CENTER" />
        <Button alignment="CENTER" onAction="#onCancelBtnClick" prefHeight="25.0" prefWidth="70.0" text="Cancel" textAlignment="CENTER" />
      <padding>
         <Insets top="5.0" />
      </padding>
    </HBox>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>
